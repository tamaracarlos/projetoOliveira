<%= form_for @central_de_alarme, :html => { :class => "form-horizontal central_de_alarme" } do |f| %>

  <% if @central_de_alarme.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@central_de_alarme.errors.count, "error") %> prohibited this central_de_alarme from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @central_de_alarme.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :modelo, :class => 'control-label col-lg-2' %>
