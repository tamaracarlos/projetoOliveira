<%= form_for @hd, :html => { :class => "form-horizontal hd" } do |f| %>

  <% if @hd.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@hd.errors.count, "error") %> prohibited this hd from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @hd.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :capacidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :capacidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:capacidade) %>
  </div>
  <div class="form-group">
    <%= f.label :tempo_de_gravacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tempo_de_gravacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tempo_de_gravacao) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hds_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
