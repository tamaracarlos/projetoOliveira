<%= form_for @camera, :html => { :class => "form-horizontal camera" } do |f| %>

  <% if @camera.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@camera.errors.count, "error") %> prohibited this camera from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @camera.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :modelos, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :modelos, :class => 'form-control' %>
    </div>
    <%=f.error_span(:modelos) %>
  </div>
  <div class="form-group">
    <%= f.label :marcas, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :marcas, :class => 'form-control' %>
    </div>
    <%=f.error_span(:marcas) %>
  </div>
  <div class="form-group">
    <%= f.label :quantidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantidade) %>
  </div>
  <div class="form-group">
    <%= f.label :localizacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :localizacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:localizacao) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cameras_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
