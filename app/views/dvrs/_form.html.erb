<%= form_for @dvr, :html => { :class => "form-horizontal dvr" } do |f| %>

  <% if @dvr.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dvr.errors.count, "error") %> prohibited this dvr from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dvr.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :modelo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :modelo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:modelo) %>
  </div>
  <div class="form-group">
    <%= f.label :canais, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :canais, :class => 'form-control' %>
    </div>
    <%=f.error_span(:canais) %>
  </div>
  <div class="form-group">
    <%= f.label :cameras, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cameras, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cameras) %>
  </div>
  <div class="form-group">
    <%= f.label :entradas, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :entradas, :class => 'form-control' %>
    </div>
    <%=f.error_span(:entradas) %>
  </div>
  <div class="form-group">
    <%= f.label :saidas, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :saidas, :class => 'form-control' %>
    </div>
    <%=f.error_span(:saidas) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dvrs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
