<%- model_class = Dvr -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:modelo) %>:</strong></dt>
  <dd><%= @dvr.modelo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:canais) %>:</strong></dt>
  <dd><%= @dvr.canais %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cameras) %>:</strong></dt>
  <dd><%= @dvr.cameras %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entradas) %>:</strong></dt>
  <dd><%= @dvr.entradas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:saidas) %>:</strong></dt>
  <dd><%= @dvr.saidas %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              dvrs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dvr_path(@dvr), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dvr_path(@dvr),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
