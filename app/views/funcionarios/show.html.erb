<%- model_class = Funcionario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @funcionario.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turno_id) %>:</strong></dt>
  <dd><%= @funcionario.turno_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @funcionario.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @funcionario.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admissao) %>:</strong></dt>
  <dd><%= @funcionario.admissao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experiencia) %>:</strong></dt>
  <dd><%= @funcionario.experiencia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:situacao) %>:</strong></dt>
  <dd><%= @funcionario.situacao %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              funcionarios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_funcionario_path(@funcionario), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              funcionario_path(@funcionario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
