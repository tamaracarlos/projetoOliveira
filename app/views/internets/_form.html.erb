<%= form_for @internet, :html => { :class => "form-horizontal internet" } do |f| %>

  <% if @internet.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@internet.errors.count, "error") %> prohibited this internet from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @internet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
   <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>

  <div class="form-group">
    <%= f.label :banda, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :banda, :class => 'form-control' %>
    </div>
    <%=f.error_span(:banda) %>
  </div>
  <div class="form-group">
    <%= f.label :contrato, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contrato, :class => 'form-control' %>
    </div>
    <%=f.error_span(:contrato) %>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cnpj, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cnpj) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                internets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
